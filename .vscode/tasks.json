        {
            "label": "Build SCTest Debug intel64",
            "type": "shell",
            "command": "${workspaceRoot}/SC.sh",
            "args": [
                "build",
                "compile",
                "SCTest",
                "Debug",
                "default",
                "intel64"
            ],
            "problemMatcher": [
                "$msCompile",
                {
                    "owner": "cpp",
                    "fileLocation": [
                        "absolute"
                    ],
                    "pattern": {
                        "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ],
            "windows": {
                "command": "${workspaceRoot}/SC.bat",
            }
        },
